@model Models.ViewModels.SuperAdminUserViewModel
@{
    ViewData["Title"] = "AddNewAdmin";
    Layout = "~/Areas/Main/Views/Shared/_Layout.cshtml";
}
<partial name="Notification" />
<div id="SuperAdminLoginForm" role="tabpanel">
    <form method="post" class="account-form-box">
        <h6>یک ادمین جدید وارد نمایید.</h6>
        <div class="input-group">
            <input asp-for=@Model.Username; type="text" class="form-control" id="Username" placeholder="نام کاربری" aria-label="Username">
            <span asp-validation-for="@Model.Username" class="text-danger"></span>
        </div>
        <div style="padding-top:10px;" class="input-group">
            <input asp-for=@Model.FullName type="text" class="form-control" id="Fullname" placeholder="نام و نام خانوادگی">
        </div>
        <div style="padding-top:10px;" class="form-group">
            <input asp-for=@Model.Email type="email" class="form-control" id="Email" aria-describedby="emailHelp" placeholder="ایمیل خود را وارد کنید">
            <span asp-validation-for="@Model.Email" class="text-danger"></span>
        </div>
        <div style="padding-top:10px;" class="form-group">
            <input asp-for=@Model.Password type="password" class="form-control" id="Password" placeholder="گذرواژه">
            <span asp-validation-for="@Model.Password" class="text-danger"></span>
        </div>
        <div style="padding-top:10px;" class="form-gruop">
            <input asp-for="@Model.ConfirmPassword" type="password" class="form-control" id="ConfirmPassword" placeholder="تکرار گذرواژه">
            <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn--full" style="background-color:black;color:white; margin-top:10px;">ثبت نام</button>
    </form>
</div>


@section Scripts {
<partial name="_ValidationScriptsPartial" />
    }

