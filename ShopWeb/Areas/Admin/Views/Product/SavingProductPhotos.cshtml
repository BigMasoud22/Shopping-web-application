@model Models.Product
@{
    ViewData["Title"] = "SavingProductPhotos";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}<html>
<style>
    form {
        background-color: #fff;
        padding: 20px;
        border-radius: 5px;
        /*box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.3);*/
        max-width: 800px;
        margin: 0 auto;
        margin-top: 50px;
    }
    h1 {
        text-align: center;
        font-weight: bold;
        font-size: 36px;
        margin-bottom: 40px;
    }
    label {
        font-weight: bold;
        display: block;
        margin-bottom: 10px;
        font-size: larger;
    }
    input[type="text"],
    textarea,
    input[type="file"],
    input[type="number"] {
        border-radius: 5px;
        font-size: 20px;
        padding: 5px;
        border: 1px solid #757575;
        width: 100%;
    }
    input[type="file"] {
        cursor: pointer;
    }
    button[type="submit"]:hover {
        background-color: #0069d9;
    }
    .form-group {
        margin-bottom: 20px;
    }
</style>
</html>
<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="MainImageAddress">عکس اصلی محصول را انتخاب کنید</label>
        <input required name="mainPic" type="file" accept="image/*">
        <span asp-validation-for="MainImageAddress"></span>
    </div>
    <div class="form-group">
        <label asp-for="Images">عکس های فرعی را انتخاب کنید</label>
        <input name="pictures" type="file" accept="image/*" multiple="multiple">
        <span asp-validation-for="Images"></span>

    </div>
    <div class="form-group">
        <label for="altText">نام عکس ها</label>
        <input required name="altText" type="text" />
        <span asp-validation-for="picturesAlternativeText"></span>
    </div>

    <input name="Id" value="@Model.id" type="hidden" />
    <button style="width:95%;" class="btn btn-lg btn-primary" type="submit">ثبت</button>
</form>

@section Scripts{
<partial name=_ValidationScriptsPartial />
}