@model Models.ViewModels.UpsertProductVM
@{
    ViewData["Title"] = "UpsertProduct";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<html>
<style>
    /*  body {
            background-image: url("/Screenshot 2023-03-01 163232.png");
